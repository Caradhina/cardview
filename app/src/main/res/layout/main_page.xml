<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/relativeLayout">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@mipmap/ic_launcher"
                       android:id="@+id/iview"
                       android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:background="#4f0e0d0e"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textViewName"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Power"
                    android:background="#4f0e0d0e"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/textViewPower" android:layout_marginTop="152dp" android:layout_marginLeft="348dp"
                    android:layout_marginStart="348dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:background="#4f0e0d0e"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/textViewGender" android:layout_marginTop="152dp" android:layout_marginLeft="204dp"
                    android:layout_marginStart="204dp"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>